<%= form_for @admin, url: action, html: { class: 'form-horizontal' } do |f| %>

  <% if @admin.errors.any? %>
    <div class="errors">
      <h2>There was an error with this administrator</h2>
      <ul>
        <% @admin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="form-section">

    <h4 class="text-center mt-2 mb-3">New Admin</h4>

    <div class="text-center form-floating">
      <div class="col-sm-12">
        <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email", autofocus: false %>
        <label for="inputEmail"><code>&#42; Email</code></label>
      </div><!-- .col-sm-12 -->
    </div><!-- .jumbotron .text-center .form-group -->

    <div class="text-center form-floating">
      <div class="col-sm-12">
        <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password", autofocus: false %>
        <label for="inputPassword"><code>&#42; Password</code></label>
      </div><!-- .col-sm-12 -->
    </div><!-- .jumbotron .text-center .form-group -->

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: 'mb-3 w-100 btn btn-lg btn-info text-light' %>
      </div><!-- .col-sm-12 -->
    </div><!-- .form-group -->

  </section><!-- .form-section -->

<% end %>
