<section class="mt-4 pt-4 mb-5 pb-5 text-center">
  <h4 class="jumbotron-heading mb-1 pb-1 pt-1">Our Community</h4>
  <!-- Google Charts -->
  <script src="https://www.gstatic.com/charts/loader.js"></script>
  <div class="row">
    <div class="col-lg-7 gstatic">
      <%= geo_chart Ahoy::Visit.countries %>
    </div><!-- .col-lg-7 -->
    <div class="col-lg-5">
      <div class="row mt-5 pt-4">
        <div class="col-1"></div>
        <div class="col-10">
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-tayberry progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= User.with_role(:visitor).count * 75.31 %>%" data-toggle="tooltip" data-placement="bottom" title="Free"></div>
            <div class="progress-bar progress-bar-striped bg-shnozberry progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= User.with_role(:member).count * 75.31 %>%" data-toggle="tooltip" data-placement="bottom" title="Members"></div>
          </div><!-- .progress -->
        </div><!-- .col-10 -->
        <div class="col-1"></div>
      </div><!-- row -->
      <div class="row mt-5 pt-2">
        <div class="col-1"></div>
        <div class="col-10">
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-orange progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= Article.count * 75.31 %>%" data-toggle="tooltip" data-placement="bottom" title="Articles"></div>
            <div class="progress-bar progress-bar-striped bg-brownie progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= TodoItem.count * 75.31 %>%" data-toggle="tooltip" data-placement="bottom" title="ToDo Items"></div>
            <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= Room.count * 75.31 %>%" data-toggle="tooltip" data-placement="bottom" title="Chat Rooms"></div>
          </div><!-- .progress -->
        </div><!-- .col-10 -->
        <div class="col-1"></div>
      </div><!-- .row -->
    </div><!-- .col-lg-5 -->
  </div><!-- row -->
</section><!-- .gstatic -->

<section class="pt-0 mt-0 text-center in-app">
  <h4 class="jumbotron-heading mb-0 pb-0">Key Features</h4>
  <div class="row">
    <div class="col-sm-3 text-muted">
      <div class="left-1 mb-5 pt-3 pb-5">
        <i class="fas fa-laptop-code" style="background:#6c757d; color:#fff;"></i>
        <h5>Mutation</h5>
        <p>Reactive components</p>
      </div><!-- .left-1 -->
      <div class="left-2 mt-5 mb-5 pt-5 pb-5">
        <i class='fas fa-chart-pie'></i>
        <h5>Analytics</h5>
    	  <p>Chartkick, Groupdate, Geocoder &amp; Ahoy</p>
      </div><!-- .left-2 -->
    </div><!-- .col-sm-3 -->
    <div class="col-sm-6 d-flex align-items-center">
      <%= image_tag 'welcome/react.png', alt: 'Welcome', class: 'center-img shadow-lg' %>
    </div><!-- .col-sm-6 -->
    <div class="col-sm-3 text-muted">
      <div class="right-1 mb-5 pt-3 pb-5">
        <i class='fas fa-lock-open'></i>
        <h5>Authentication</h5>
    	  <p>Devise, Rolify, &amp; CanCan</p>
      </div><!-- .right-1 -->
      <div class="right-2 mt-5 mb-5 pt-5 pb-5">
        <i class='fas fa-comments'></i>
        <h5>WebRTC</h5>
        <p>Video Chat via Stimulus and the Twilio API</p>
      </div><!-- .right-2 -->
    </div><!-- .col-sm-3 .text-muted -->
  </div><!-- .row -->
</section><!-- .in-app -->

<!-- Transition Images -->
<script>
  $(function() {
    $(".left-1 svg").css('background', '#6c757d');
    $('.left-1 svg').css('color', '#fff');
    $('.left-1').click(function(){
      $('img.center-img').hide().toggle("shuffle").attr("src",'<%= asset_path("welcome/react.png")%>');
      $(".left-1 svg").css('background', '#6c757d');
      $('.left-1 svg').css('color', '#fff');
      $(".left-2 svg").removeAttr('style');
      $(".right-1 svg").removeAttr('style');
      $(".right-2 svg").removeAttr('style');
      return false;
    });
    $('.left-2').click(function(){
      $('img.center-img').hide().toggle("shuffle").attr("src",'<%= asset_path("welcome/chart.png")%>');
      $(".left-2 svg").css('background', '#6c757d');
      $('.left-2 svg').css('color', '#fff');
      $(".left-1 svg").removeAttr('style');
      $(".right-1 svg").removeAttr('style');
      $(".right-2 svg").removeAttr('style');
      return false;
    });
    $('.right-1').click(function(){
      $('img.center-img').hide().toggle("shuffle").attr("src",'<%= asset_path("welcome/devise.png")%>');
      $(".right-1 svg").css('background', '#6c757d');
      $('.right-1 svg').css('color', '#fff');
      $(".right-2 svg").removeAttr('style');
      $(".left-1 svg").removeAttr('style');
      $(".left-2 svg").removeAttr('style');
      return false;
    });
    $('.right-2').click(function(){
      $('img.center-img').hide().toggle("shuffle").attr("src",'<%= asset_path("welcome/webRTC.png")%>');
      $(".right-2 svg").css('background', '#6c757d');
      $('.right-2 svg').css('color', '#fff');
      $(".right-1 svg").removeAttr('style');
      $(".left-1 svg").removeAttr('style');
      $(".left-2 svg").removeAttr('style');
      return false;
    });
  });
</script>
