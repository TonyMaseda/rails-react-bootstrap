<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Home</h1>
    <p class="lead text-muted">There is no actual product being sold here. The content below is example markup made with bootstrap, but we may integrate stripe later. Please <%= link_to('sign in', new_user_session_path) %> or <%= link_to("sign up", new_user_registration_path) %> to see the blog &plus; todo list.</p>
  </div>
</section>

<div class="card-deck mb-3 text-center">
  <div class="card mb-4 shadow-sm">
    <div class="card-header bg-tayberry">
      <h4 class="my-0 font-weight-bold text-white">Free</h4>
    </div>
    <div class="card-body">
      <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
      <ul class="list-unstyled mt-3 mb-4">
        <li><strong>Lorem</strong></li>
        <li>Fusce dapibus donec id elit</li>
        <li>Porta gravida</li>
        <li>Justo</li>
      </ul>
      <%= link_to("Sign up for free", new_user_registration_path, class: 'btn btn-lg btn-block btn-outline-primary') %>
    </div>
  </div>
  <div class="card mb-4 shadow-sm">
    <div class="card-header bg-shnozberry">
      <h4 class="my-0 font-weight-bold text-white">Premium</h4>
    </div>
    <div class="card-body">
      <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
      <ul class="list-unstyled mt-3 mb-4">
        <li><strong>Lorem Ipsum</strong></li>
        <li>Fusce dapibus donec id elit</li>
        <li>Porta gravida at <a href="https://github.com/TonyMaseda/rails-react-bootstrap" target="_blank">enlacita</a> eget</li>
        <li>Justo sit amet risus</li>
      </ul>
      <button type="button" class="btn btn-lg btn-block btn-outline-success">Start subscription</button>
    </div>
  </div>
</div>

