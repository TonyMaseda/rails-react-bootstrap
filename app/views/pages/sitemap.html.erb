<div class="media text-muted pt-3">
  <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <strong class="d-block">
      <%= link_to pages_terms_and_conditions_path do %>
        Terms and Conditions
      <% end %>
    </strong>
  </p><!-- .media-body -->
</div><!-- .media -->
