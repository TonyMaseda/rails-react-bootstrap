<%= form_with model: [ @article, @article.comments.build ], html: { remote: true, class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.rich_text_area :body, id: 'comment_name', class: 'form-control' %>
  </div><!-- .form-group -->
  <div class="form-group mt-2" data-bs-dismiss="offcanvas" aria-label="Close">
    <%= f.submit 'Submit Comment', class: 'w-100 btn btn-lg btn-dark' %>
  </div><!-- .form-group -->
<% end %>
