<%= turbo_frame_tag "room" do %>
  <%= form_for @room, html: { class: 'form-horizontal' } do |f| %>

    <% if @room.errors.any? %>
      <div class="position-fixed d-flex justify-content-center align-items-center z-eleven">
        <div class="toast show rounded toast-danger" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header">
            <%= link_to root_path, class: 'navbar-brand' do %>
              <%= image_tag 'logo.png', alt: 'Logo', title: 'Home', class: 'footer-logo' %>
            <% end %>
            <strong class="me-auto"></strong>
            <small><%= Time.now.in_time_zone(current_user.timezone).strftime('%l:%M%P') %></small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <% @room.errors.full_messages.each do |msg| %>
            <div class="toast-body text-danger">
              <%= msg %>
            </div>
          <% end %>
        </div><!-- .toast .show -->
      </div><!-- .position-fixed .d-flex -->
    <% end %>

    <section class="pt-1 text-start">
      <div class="form-floating">
        <%= f.text_field :name, autocomplete: "Name", id: "inputName", class: "form-control", placeholder: "Name", autofocus: false %>
        <label for="inputEmail"><code class="text-tayberry">&#42; Name</code></label>
      </div><!-- .form-floating -->
      <div class="form-group d-flex justify-content-center">
        <%= link_to 'Cancel', @room, class: 'btn btn-secondary align-self-center mx-1' %>
        <%= f.submit 'Submit', class: 'btn btn-tayberry align-self-center mx-1' %>
      </div><!-- .form-group -->
    </section><!-- .pt-1 -->

  <% end %>
<% end # turbo_frame_tag "room" %>
