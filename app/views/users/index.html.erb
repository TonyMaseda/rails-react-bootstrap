        <tr>
          <th scope="col">User</th>
          <th scope="col">Articles</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.articles.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination">
      <%= will_paginate @users %>
