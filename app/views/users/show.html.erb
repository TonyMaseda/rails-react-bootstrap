<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading"><%= @user.name %></h1>
    <p class="lead"><%= mail_to @user.email, @user.email, class: 'text-info font-weight-bold' %></p>
    <p class="text-muted">Joined <%= @user.created_at.strftime('%b %-d, %Y') %></p>
  </div><!-- .container -->
</section><!-- .jumbotron -->

<section class="text-center mt-0">
  <div class="mt-0 mb-0">
    <%= area_chart @user.articles.group_by_month_of_year(:created_at).count.map{ |k, v| [I18n.t("date.month_names")[k], v] }, points: false, colors: ["rgba(0,0,0,0.5)"], title: "Articles" %>
  </div><!-- .mt-0 .mb-0 -->
  <div class=" mt-0 mb-0">
    <%= render partial: 'articles/articles' %>
  </div><!-- .mt-0 .mb-0 -->
</section><!-- .container -->
