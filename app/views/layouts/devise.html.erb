<!DOCTYPE html>
<html>
  <head>
    <title>Rails React Bootstrap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': true %>
    <% if user_signed_in? && current_user.dark_theme %>
      <style>
        /* Dark Theme */
        .theme, .bg-shnozberry, .text-shnozberry, .bg-tayberry, .text-tayberry,
        .bg-success, .btn-success, .btn-outline-success, .text-info,
        .bg-danger, .btn-danger, .btn-outline-danger, .text-danger,
        .dropdown-menu {filter: invert(100%);}
      </style>
    <% end %>
  </head>
  <body class="authorization theme">
    <%= yield %>
  </body>
</html>
