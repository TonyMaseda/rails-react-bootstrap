<% flash.each do |key, value| %>
  <div class="container">
    <div class="alert <%= key == 'notice' ? 'alert-primary' : 'alert-danger' %>" role="alert">
      <%= value %>
      <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>
<% end %>
