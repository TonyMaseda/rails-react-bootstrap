<section class="text-center pt-5 mt-5 pb-5">
  <div class="row pt-0 mt-0 mb-5">
    <div class="col-md-7">
      <%= area_chart api_v1_charts_month_of_year_single_todos_path, download: {background: "#ffffff"}, points: false, colors: ["rgba(0,0,0,0.5)"], title: "My Items" %>
    </div><!-- .col-md-7 -->
    <div class="col-md-1 pb-5"></div>
    <div class="col-md-4">
      <%= pie_chart api_v1_charts_complete_incomplete_single_todos_path, legend: false, download: {background: "#ffffff"}, colors: ["rgba(0,0,0,0.3)", "rgba(0,0,0,0.7)"], title: "My List Status" %>
    </div><!-- .col-md-4 -->
  </div><!-- .row -->
