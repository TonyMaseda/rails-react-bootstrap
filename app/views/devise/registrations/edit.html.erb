<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="text-center mb-4">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png', alt: 'Logo', class: 'logo' %>
    <% end %>
    <h1 class="h3 mb-3 font-weight-normal">Edit <%= resource_name.to_s.humanize %></h1>
    <h5 class="h5 mb-3 font-weight-normal"><%= link_to('Home', root_path, class: "btn btn-outline-dark") %></h5>
  </div><!-- .text-center .mb-4 -->

  <div class="form-label-group">
    <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email address", autofocus: true %>
    <label for="inputEmail">Email address</label>
  </div><!-- .form-label-group -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-label-group">
    <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password (6 characters minimum)", autofocus: true %>
    <label for="inputPassword">Password</label>
  </div><!-- .form-label-group -->

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, id: "inputPasswordConfirmation", class: "form-control", placeholder: "Password Confirmation", autofocus: true %>
    <label for="inputPasswordConfirmation">Password confirmation</label>
  </div><!-- .form-label-group -->

  <div class="form-label-group">
    <%= f.password_field :current_password, autocomplete: "current-password", id: "inputCurrentPassword", class: "form-control", placeholder: "Password (6 characters minimum)", autofocus: true %>
    <label for="inputCurrentPassword">Current Password</label>
  </div><!-- .form-label-group -->

  <%= f.submit "Update", class: "btn btn-lg btn-outline-success btn-block" %>

<% end %>

<div class="goodbye">
  <p class="mt-5 mb-3 text-muted text-center">
    <%= link_to(destroy_user_session_path, method: :delete) do %>
      <i class="fas fa-sign-out-alt fa-2x" title='Sign out'></i>
    <% end %>
    <%= link_to(registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account? Note: your articles depend on you and will also be deleted." }, method: :delete) do %>
      <i class="fas fa-trash fa-2x" title='Delete Acount!'></i>
    <% end %>
  </p>
</div><!-- .goodbye -->
