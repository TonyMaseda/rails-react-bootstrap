<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="text-center mb-4">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png', alt: 'Logo', class: 'logo' %>
    <% end %>
    <h1 class="h3 mb-3 fw-normal">Resend unlock instructions</h1>
  </div><!-- .text-center .mb-4 -->

  <div class="form-floating">
    <%= f.email_field :email, autocomplete: "email", id: "inputEmail", class: "form-control", placeholder: "Email address", autofocus: true %>
    <label for="inputEmail">Email address</label>
  </div><!-- .form-floating -->

  <%= f.submit "Resend unlock instructions", class: "w-100 btn btn-lg btn-info text-light" %>

  <p class="mt-5 mb-3 text-muted text-center">
    <%= render "devise/shared/links" %>
  </p>

<% end %>
