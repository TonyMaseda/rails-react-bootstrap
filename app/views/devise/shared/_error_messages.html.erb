  <!-- Customized layout -->
  <div class="position-fixed d-flex justify-content-center align-items-center" style="z-index: 11">
    <div class="toast show rounded toast-danger" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= image_tag 'logo.png', alt: 'Logo', title: 'Home', class: 'footer-logo' %>
        <% end %>
        <strong class="me-auto"></strong>
        <small>
          <% if signed_in? %>
            <%= Time.now.in_time_zone(current_user.timezone).strftime('%l:%M%P') %>
          <% else %>
            <%= "#{ActionController::Base.helpers.distance_of_time_in_words Time.now, Time.now} ago" %>
          <% end %>
        </small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div><!-- .toast-header -->
      <% resource.errors.full_messages.each do |message| %>
        <div class="toast-body text-danger">
          <%= message %>
        </div><!-- .toast-body -->
      <% end %>
    </div><!-- .toast .show -->
  </div><!-- .position-fixed .d-flex -->

