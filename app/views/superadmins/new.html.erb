<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Super Admins</h1>
    <p class="lead text-start text-muted">Hi, <%= link_to truncate(current_user.name), current_user, class: "text-info fw-bold" %>, you are authorized to create super admins. You can use the form at the bottom of the page to create a new super admin user.</p>
    <div class="filter">
      <%= render partial: 'superadmins/search', locals: { action: new_superadmin_path, q: '' } %>
    </div><!-- .filter -->
  </div><!-- .container -->
</section><!-- .jumbotron -->

<div class="row">
  <div class="col-lg-8 mb-5">
    <%= render partial: 'users/users' %>
  </div><!-- .col-lg-8 -->
  <div class="col-lg-4 mb-5">
    <%= render partial: 'superadmins/chart' %>
    <div class="mt-5">
      <%= render partial: 'superadmins/form', locals: { action: superadmins_path } %>
    </div>
  </div><!-- .col-lg-4 -->
</div><!-- .row -->
