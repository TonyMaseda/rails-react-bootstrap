<%= form_for @article, html: { class: 'form-horizontal' } do |f| %>

  <% if @article.errors.any? %>
    <div class="errors">
      <h2>There was an error with this article:</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="form-section">

      <div class="form-label-group">
        <div class="col-sm-12">
          <%= f.text_field :title, id: "inputTitle", class: "form-control", placeholder: "Title", autofocus: true %>
          <label for="inputTitle"><code>&#42; Title</code></label>
        </div><!-- .col-sm-12 -->
      </div><!-- .form-label-group -->

      <div class="form-group">
        <section class="jumbotron text-center jumbo-show bg-dark" style="background-image: url('<%= image_tag(@article.avatar.url) %>')"></section>
        <div class="col-sm-12">
          <p><%= f.file_field :avatar, class: 'avatar' %></p>
          <%= f.hidden_field :avatar_cache %>
          <p><%= f.check_box :remove_avatar %> Remove Image</p>
        </div><!-- .col-sm-12 -->
      </div><!-- .form-group -->

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.rich_text_area :text, class: 'form-control' %>
        </div><!-- .col-sm-12 -->
      </div><!-- .form-group -->

      <div class="form-group">
        <div class="col-sm-12 text-center">
          <%= link_to 'Cancel', articles_path, class: 'btn btn-outline-secondary' %>
          <%= f.submit class: 'btn btn-outline-success' %>
        </div><!-- .col-sm-12 -->
      </div><!-- .form-group -->

  </section><!-- .form-section -->

<% end %>
