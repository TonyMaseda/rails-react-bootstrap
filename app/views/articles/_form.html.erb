<%= form_for @article, html: { class: 'form-horizontal' } do |f| %>

  <% if @article.errors.any? %>
    <div class="errors">
      <h2>There was an error with this article:</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="form-section">

    <div class="jumbotron text-center form-label-group">
      <div class="col-sm-12">
        <%= f.text_field :title, id: "inputTitle", class: "form-control", placeholder: "Title", autofocus: true %>
        <label for="inputTitle"><code>&#42; Title</code></label>
      </div><!-- .col-sm-12 -->
    </div><!-- .jumbotron .text-center .form-group -->

    <div class="jumbotron text-center form-label-group">
      <div class="col-sm-12">
        <%= f.text_field :embed, id: "inputEmbed", class: "form-control", placeholder: "YouTube Video", autofocus: true %>
        <label for="inputEmbed">YouTube Video (<span style="cursor:help;" class="text-info" data-toggle="modal" data-target="#exampleModal">examples<span>)</label>
        <div class="modal fade text-left" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModal" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title" id="footerModalLabel">
                  Example YouTube Links
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <i class="fas fa-window-close"></i>
                </button><!-- .close -->
              </div><!-- .modal-header -->
              <div class="modal-body">
                <div class="my-3 p-3 shadow-lg">
                  <h5 class="border-bottom border-gray pb-1 mt-1">Format 1</h5>
                  <div class="media text-muted pt-1">
                    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                      https://youtu.be/<strong>u75Zsl1ECPQ</strong>
                    </p><!-- .media-body -->
                  </div><!-- .media -->
                  <h5 class="border-bottom border-gray pb-1 mt-4">Format 2</h5>
                  <div class="media text-muted pt-1">
                    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                      https://www.youtube.com/watch?v=<strong>u75Zsl1ECPQ</strong>
                    </p><!-- .media-body -->
                  </div><!-- .media -->
                  <h5 class="border-bottom border-gray pb-1 mt-4">Format 3</h5>
                  <div class="media text-muted pt-1">
                    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                      https://www.youtube.com/watch?v=<strong>u75Zsl1ECPQ</strong>&list=PLu9lbDbw-S8zyBwu9_aA2nE-3QocgyzRE&index=4
                    </p><!-- .media-body -->
                  </div><!-- .media -->
                </div><!-- .my-3 p-3 bg-white rounded shadow-sm -->
              </div><!-- .modal-body -->
            </div><!-- .modal-content -->
          </div><!-- .modal-dialog -->
        </div><!-- .modal -->
      </div><!-- .col-sm-12 -->
    </div><!-- .jumbotron .text-center .form-group -->

    <div class="jumbotron form-group">
      <div class="col-sm-12">
        <%= f.rich_text_area :text, class: 'form-control' %>
      </div><!-- .col-sm-12 -->
    </div><!-- .jumbotron .form-group -->

    <div class="form-group">
      <div class="col-sm-12 text-center">
        <%= link_to 'Cancel', articles_path, class: 'btn btn-outline-secondary' %>
        <%= f.submit class: 'btn btn-success' %>
      </div><!-- .col-sm-12 -->
    </div><!-- .form-group -->

  </section><!-- .form-section -->

<% end %>
