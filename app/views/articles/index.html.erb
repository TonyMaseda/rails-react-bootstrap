<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Blog</h1>
    <p class="lead text-left text-muted">Create, read, update, &amp; destroy your articles. Read articles by other authors and link to their profiles.</p>
    <div class="filter">
      <%= render partial: 'articles/search', locals: { action: articles_path, q: '' } %>
    </div><!-- .filter -->
  </div><!-- .container -->
</section><!-- .jumbotron -->

<%= render partial: 'articles/articles' %>

<section class="text-center mt-5 pb-5">
  <% if can? :manage, User, roles: { name: 'member' } %>
    <div class="mb-5">
      <%= area_chart api_v1_charts_month_of_year_articles_path, points: false, colors: ["rgba(0,0,0,0.5)"], title: "Articles" %>
    </div><!-- .mb-5 -->
  <% end %>
</section><!-- .text-center .mt-5 -->
