<div class="album py-5 text-left">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-lg-4">
      <div class="card mb-4 box-shadow shadow">
        <% if article.embed.present? %>
          <%= link_to article.thumb.html_safe, article_path(article) %>
        <% else %>
          <%= link_to image_tag("missing.svg", alt: 'Media', class: 'card-img-top'), article_path(article) %>
        <% end %>
        <div class="card-body text-nowrap">
          <p class="card-text font-weight-bold">
            <%= link_to truncate(article.title), article_path(article), class: 'text-dark' %>
          </p>
          <p class="card-text"><i class="fas fa-user text-muted"></i> <%= link_to truncate(article.user.name), article.user, class: 'text-info font-weight-bold' %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'View', article_path(article), class: 'btn btn-sm btn-outline-secondary' %>
              <% if can? :manage, article %>
                <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-outline-secondary' %>
              <% end %>
            </div><!-- .btn-group -->
            <% if article.users_articles.find_by(user_id: current_user) %>
              <span>
                <small class="text-muted"><%= article.created_at.in_time_zone("#{current_user.timezone}").strftime('%b %-d, %Y') %></small>
                <i class="fas fa-heart small ml-2 font-italic font-weight-light text-tayberry"></i> <sup class="font-italic text-tayberry"><%= article.liked_by_users.size %></sup>
              </span>
            <% else %>
              <span>
                <small class="text-muted"><%= article.created_at.in_time_zone("#{current_user.timezone}").strftime('%b %-d, %Y') %></small>
                <i class="fas fa-heart-broken small ml-2 font-italic font-weight-light text-muted"></i> <sup class="font-italic text-muted"><%= article.liked_by_users.size %></sup>
              </span>
            <% end %>
          </div><!-- .d-flex -->
        </div><!-- .card-body -->
      </div><!-- .card .box-shadow .shadow -->
    </div><!-- .col-lg-4 -->
    <% end %>
  </div><!-- .row -->
  <div class="pagination">
    <%= will_paginate @articles,
      previous_label:'Prev',
      next_label:'Next',
      inner_window: 1, outer_window: -1
    %>
  </div><!-- .pagination -->
</div><!-- .album -->
