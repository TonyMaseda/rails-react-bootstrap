<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading"><%= @article.title %></h1>
    <p class="lead text-muted">
      <strong class="d-block mb-2"><i class="bi bi-person-fill text-dark"></i>
        <%= link_to truncate(@article.user.name), @article.user, class: "text-info" %>
      </strong>
      <%= @article.created %>
      <%= render partial: 'like' %>
    </p>
    <% if can? :manage, @article %>
      <p class="mt-0 mb-0">
        <%= link_to edit_article_path(@article), class: 'btn btn-outline-dark' do %>
          <i class='bi bi-pencil-fill text-orange' data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"></i>
        <% end %>
        <%= link_to article_path(@article), class: 'btn btn-outline-dark', method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } do %>
          <i class='bi bi-trash-fill text-danger' data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete"></i>
        <% end %>
      </p>
    <% end %>
  </div><!-- .container -->
</section><!-- .jumbotron -->

<div class="card-body">
  <% if @article.embed.present? %>
    <div class="ratio ratio-16x9">
      <%= @article.iframe %>
    </div><!-- .embed-responsive -->
  <% end %>
  <div class="card-text mt-3 mb-2">
    <%= @article.text if @article.text.present? %>
  </div>
</div><!-- .card-body -->

<section class="container">
  <h4 class="jumbotron-heading text-center my-5">Comments</h4>
  <div class="row">
    <div class="col-lg-7 overflow-auto" id='comments'>
      <%= render partial: 'comments/comment' %>
    </div><!-- .col-lg-7 -->
    <div class="col-lg-5">
      <%= render partial: 'comments/form' %>
    </div><!-- .col-lg-5 -->
  </div><!-- .row -->
</section><!-- .container -->

<section class="text-center mt-5">
  <h4 class="jumbotron-heading pt-5 mb-0 text-gray-dark">Articles by <%= link_to truncate(@article.user.name), @article.user, class: "text-info" %></h4>
  <div class="pt-0 mt-0 mb-0">
    <%= render partial: 'articles/articles' %>
  </div><!-- .pt-0 .mt-0 .mb-0 -->
</section><!-- .text-center mt-5 -->
